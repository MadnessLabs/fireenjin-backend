{
  "name": "@madnesslabs/fireenjin-backend",
  "version": "1.0.0",
  "engines": {
    "node": "10"
  },
  "scripts": {
    "build": "npm run clean && tsc && npm run codegen",
    "build:firebase": "npm run build && fireenjin triggers",
    "clean": "rimraf dist/",
    "codegen": "graphql-codegen --config codegen.yml && tsc dist/sdk.ts",
    "copy": "fireenjin copy",
    "deploy:graphql": "gcloud app deploy",
    "deploy:firebase": "firebase deploy",
    "env": "fireenjin env",
    "g": "fireenjin generate",
    "git:build": "git add . && git commit -m \"Run build\" --no-verify",
    "lint": "tslint --project tsconfig.json",
    "migrate": "npm run build && fireenjin migrate",
    "publish": "npm run release",
    "release": "npm run lint && npm run build && npm run codegen",
    "semantic-release": "semantic-release",
    "seed": "npm run build && fireenjin seed",
    "seed:clone": "npm run build && fireenjin seed:clone",
    "serve": "npm run env local && ts-node-dev --respawn src/index.ts",
    "start": "node dist/index.js",
    "test": "jest --no-cache",
    "test:watch": "jest --watch --no-cache"
  },
  "types": "dist/definitions.d.ts",
  "main": "dist/index.js",
  "dependencies": {
    "apollo-server": "^2.18.2",
    "date-fns": "^2.16.1",
    "firebase-admin": "^8.13.0",
    "firebase-functions": "^3.11.0",
    "fireorm": "^0.11.1",
    "graphql": "^14.7.0",
    "graphql-request": "^1.8.2",
    "graphql-tag": "^2.11.0",
    "pluralize": "^8.0.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.6"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.19.0",
    "@graphql-codegen/fragment-matcher": "^1.17.8",
    "@graphql-codegen/introspection": "^1.18.0",
    "@graphql-codegen/typescript": "^1.17.11",
    "@graphql-codegen/typescript-document-nodes": "^1.17.8",
    "@graphql-codegen/typescript-graphql-files-modules": "^1.18.0",
    "@graphql-codegen/typescript-graphql-request": "^1.17.7",
    "@graphql-codegen/typescript-operations": "^1.17.8",
    "@madnesslabs/fireenjin": "^1.3.4",
    "@semantic-release/commit-analyzer": "^6.3.3",
    "@semantic-release/git": "^7.0.18",
    "@semantic-release/npm": "^5.3.5",
    "@semantic-release/release-notes-generator": "^7.3.5",
    "@types/jest": "^24.9.1",
    "firebase-tools": "^7.16.2",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "rimraf": "^3.0.2",
    "semantic-release": "^15.14.0",
    "ts-jest": "^24.3.0",
    "ts-node-dev": "^1.0.0",
    "tslint": "^5.20.1",
    "typescript": "^3.9.7"
  },
  "author": {
    "email": "info@madnesslabs.net",
    "name": "Madness Labs",
    "url": "https://madnesslabs.net"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MadnessLabs/FireEnjinGraphQL.git"
  },
  "private": false,
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts?)$",
    "testURL": "http://localhost",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run release",
      "post-commit": "npm run git:build"
    }
  }
}
